	<!-- sprites are lots of images stored together as one image -->
	<sprites>
		<sprite name="playlist_button">
			<rect name="left">
				<pos x="0" y="0" />
				<size w="4" h="19" />
			</rect>
			<rect name="fill">
				<pos x="4" y="0" />
				<size w="4" h="19" />
			</rect>	
			<rect name="seperator">
				<pos x="8" y="0" />
				<size w="4" h="19" />
			</rect>	
			<rect name="right">
				<pos x="12" y="0" />
				<size w="4" h="19" />
			</rect>
		</sprite>			
	
		<sprite name="main_button">
			<rect name="normal">
				<pos x="0" y="0" />
				<size w="500" h="22" />
			</rect>
			<rect name="disabled">
				<pos x="0" y="22" />
				<size w="500" h="22" />
			</rect>
			<rect name="focus">
				<pos x="0" y="44" />
