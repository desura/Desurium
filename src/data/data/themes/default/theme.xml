			</rect>	
			<rect name="fill">
				<pos x="7" y="7" />
				<size w="8" h="8" />
			</rect>		
		</sprite>
	
		<sprite name="horizontal_rule">
			<rect name="Left">
				<pos x="0" y="0" />
				<size w="5" h="-1" />
			</rect>
			<rect name="Center">
				<pos x="5" y="0" />
				<size w="5" h="-1" />
			</rect>	
			<rect name="Right">
				<pos x="10" y="0" />
				<size w="5" h="-1" />
			</rect>				
		</sprite>		
		
		<sprite name="button">
			<rect name="Left">
				<pos x="0" y="0" />
