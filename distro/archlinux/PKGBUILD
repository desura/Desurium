# Creator: Sven-Hendrik Haase <sh@lutzhaase.com>
# Maintainer: Jookia <166291@gmail.com>
pkgname=desurium-git
pkgver=20120406
pkgrel=1
pkgdesc="A community-driven digital distribution service for gamers (open source version)"
url="http://github.com/lodle/Desurium"
license=('GPL3')
arch=('i686' 'x86_64')
makedepends=('cmake' 'git' 'boost' 'subversion' 'scons' 'gawk')
depends=('v8' 'tinyxml' 'sqlite3' 'boost-libs' 'bzip2' 'gtk2' 'openssl'
         'curl' 'c-ares' 'libnotify' 'nss' 'libgnome-keyring' 'bison'
         'cups' 'flex' 'alsa-lib' 'libjpeg-turbo' 'libxpm' 'libx11'
         'gconf' 'xdg-user-dirs' 'v8')
provides=('desura')
conflicts=('desura')

_gitroot=git://github.com/lodle/Desurium.git
_gitname=Desurium

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname"
    msg "Removing build files..."
    ./build_cmake_clean.sh
    msg "Updating..."
    git pull origin
    msg "The local files are updated."
  else
    msg "Cloning..."
    git clone "$_gitroot" "$_gitname" --depth 1
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  cd "$srcdir/$_gitname"
  if [ ! -d build ] ; then
    mkdir build
  fi
  cd build
  msg "Running cmake..."
  cmake -D32BIT_SUPPORT=0 -DCMAKE_INSTALL_PREFIX=/opt/desura -LD_LIBRARY_PATH=/opt/desura/lib ..
  msg "Running make..."
  make

  cd ..
  msg "Running getceflibs.sh ..."
  ./getceflibs.sh /opt/desura
}

package() {
  cd "$srcdir/$_gitname"

  cd build
  msg "Compiling into pkgdir this time..."
  make DESTDIR="$pkgdir/" install

  cd ..
  cp ceflibs/* "$pkgdir/opt/desura/lib"
  msg "Compiling done"
}

# vim:set ts=2 sw=2 et:
