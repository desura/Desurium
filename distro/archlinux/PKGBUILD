# Creator: Sven-Hendrik Haase <sh@lutzhaase.com>
# Maintainer: Jookia <166291@gmail.com>
pkgname=desurium-git
pkgver=20120404
pkgrel=1
pkgdesc="A community-driven digital distribution service for gamers (open source version)"
url="http://github.com/lodle/Desurium"
license=('GPL3')
arch=('i686' 'x86_64')
makedepends=('cmake' 'git' 'boost' 'subversion' 'scons')
depends=('v8' 'tinyxml' 'sqlite3' 'boost-libs' 'bzip2' 'gtk2' 'openssl'
         'curl' 'c-ares' 'libnotify' 'nss' 'libgnome-keyring' 'bison'
         'cups' 'flex' 'alsa-lib' 'libjpeg-turbo' 'libxpm' 'libx11'
         'gconf' 'xdg-user-dirs' 'v8')
provides=('desura')
conflicts=('desura')

_gitroot=git://github.com/lodle/Desurium.git
_gitname=Desurium

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname"
    msg "Removing build files..."
    git clean -dfx
    msg "Updating..."
    git pull origin
    msg "The local files are updated."
  else
    msg "Cloning..."
    git clone "$_gitroot" "$_gitname" --depth 1
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  mkdir build
  cd build
  cmake -D32BIT_SUPPORT=0 -DCMAKE_INSTALL_PREFIX=/opt/desura ..
  make

  cd ..
  ./getceflibs.sh
}

package() {
  cd "$srcdir/$_gitname-build"

  cd build
  make DESTDIR="$pkgdir/" install

  cd ..
  cp ceflibs/* "$pkgdir/opt/desura/lib"
}

# vim:set ts=2 sw=2 et:
