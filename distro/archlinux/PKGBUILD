pkgname=desurium-git
pkgver=20120413
pkgrel=1
pkgdesc="A community-driven digital distribution service for gamers (open source version)"
url="http://github.com/lodle/Desurium"
license=('GPL3')
arch=('i686' 'x86_64')
makedepends=('cmake' 'git' 'boost' 'subversion' 'scons' 'gawk' 'gendesk' 'sed')
depends=('v8' 'tinyxml' 'sqlite' 'boost-libs' 'bzip2' 'gtk2' 'openssl'
         'curl' 'c-ares' 'libnotify' 'nss' 'libgnome-keyring' 'bison'
         'cups' 'flex' 'alsa-lib' 'libjpeg-turbo' 'libxpm' 'libx11'
         'gconf' 'xdg-user-dirs' 'v8')
provides=('desura')
conflicts=('desura')
install=desurium-git.install
source=('run-desura.sh'
        'desurium-git.install')
sha1sums=('2b42eaf7ce9ca41fa3c340c2b2ea147806025b8b'
          '5bc0f47b75bb328b2bb3a735a55558edce75f741')

_gitroot=git://github.com/lodle/Desurium.git
_gitname=Desurium

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname"
    msg "Removing build files..."
    # if this fails, git clean -dfx
    ./build_make_clean.sh || echo "./build_make_clean.sh failed, running  git clean -dfx ..." ; git clean -dfx
    msg "Updating..."
    git pull origin
    msg "The local files are updated."
  else
    msg "Cloning..."
    git clone "$_gitroot" "$_gitname" --depth 1
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  cd "$srcdir/$_gitname"
  if [ ! -d build ] ; then
    mkdir build
  fi
  cd build
  msg "Running cmake..."
  cmake -D32BIT_SUPPORT=0 -DCMAKE_INSTALL_PREFIX=/opt/desura -LD_LIBRARY_PATH=/opt/desura/lib ..
  msg "Running make..."
  make
}

package() {
  cd "$srcdir/$_gitname/build"

  msg "Compiling into pkgdir this time..."
  make DESTDIR="$pkgdir/" install

  cd ../../../

  install -Dm 755 ./run-desura.sh ${pkgdir}/usr/bin/desura
  gendesk PKGBUILD
  cp ${srcdir}/${_gitname}/src/branding_desurium/data/desura_lin.png ./desurium-git.png
  sed -i -e 's/Icon=desurium-git.png/Icon=Desura.png/' -e 's/Exec=desurium-git/Exec=desura/' desurium-git.desktop
  mv desurium-git.desktop Desura.desktop
  mv desurium-git.png Desura.png

  msg "Compiling done"

}

